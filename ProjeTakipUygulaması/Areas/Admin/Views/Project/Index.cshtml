@model IEnumerable<ProjeTakip.Models.ViewModels.ProjectVM>

<h2>Projects</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Proje</th>
                <th>Ekip</th>
                <th>Ekip Lideri</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Proje Durumu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", new { id = project.ProjectId })">@project.ProjectName</a>
                    </td>
                    <td>@project.TeamName</td>
                    <td>@project.TeamLeadName</td>
                    <td>@project.StartDate.ToString("dd.MM.yyyy")</td>
                    <td>@project.EndDate.ToString("dd.MM.yyyy")</td>
                    <td>@project.ProjectStatusName</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = project.ProjectId })">Düzenle</a> |
                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = project.ProjectId })">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No projects available.</p>
}
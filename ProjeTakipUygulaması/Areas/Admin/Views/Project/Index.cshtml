@model IEnumerable<ProjeTakip.Models.ViewModels.ProjectVM>

<h2>Projects</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Proje</th>
                <th>Ekip</th>
                <th>Ekip Lideri</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Proje Durumu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", new { id = project.ProjectId })">@project.ProjectName</a>
                    </td>
                    <td>@project.TeamName</td>
                    <td>@project.TeamLeadName</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@project.EndDate.ToShortDateString()</td>
                    <td>@project.ProjectStatusName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@project.ProjectId">Düzenle</a> |
                        <a asp-action="Delete" asp-route-id="@project.ProjectId">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No projects available.</p>
}
@model ProjeTakip.Models.Project

<h2>Projeyi Sil</h2>

<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="ProjectName"></label>
        <input disabled asp-for="ProjectName" class="form-control" />
        <span asp-validation-for="ProjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectDescription"></label>
        <textarea disabled asp-for="ProjectDescription" class="form-control"></textarea>
        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamId"></label>
        <select disabled asp-for="TeamId" asp-items="ViewBag.Teams" class="form-control"></select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="form-control"></label>
        <input disabled asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="form-control"></label>
        <input disabled asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sil</button>
    <a class="btn btn-outline-warning mt-3" onclick="window.history.back()">Geri</a>
</form>

@section Scripts {
    <script>
    tinymce.init({
        selector: 'textarea',  // Tüm textarea elementlerine TinyMCE uygular
        readonly: 1,
        plugins: 'lists link image preview',
        toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
        menubar: false,
        branding: false
    });
    </script>
}

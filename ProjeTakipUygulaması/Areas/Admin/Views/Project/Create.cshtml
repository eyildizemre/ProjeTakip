@model ProjeTakip.Models.Project

<h2>Proje Oluştur</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ProjectName"></label>
        <input asp-for="ProjectName" class="form-control" />
        <span asp-validation-for="ProjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectDescription"></label>
        <textarea asp-for="ProjectDescription" class="form-control"></textarea>
        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamId"></label>
        <select asp-for="TeamId" asp-items="ViewBag.Teams" class="form-control"></select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamLead"></label>
        <select asp-for="TeamLead" asp-items="ViewBag.Teams" class="form-control"></select>
        <span asp-validation-for="TeamLead" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="form-control"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="form-control"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@model IEnumerable<ProjeTakip.Models.Team>

<h2>Teams</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ekip</th>
            <th>Ekip Yöneticisi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td><a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@team.TeamId">@team.TeamName</a></td>
                <td>@team.TeamLead?.UserFName @team.TeamLead?.UserLName</td>

                        {
                            <div>@userTeam.User.UserFName @userTeam.User.UserLName (@userTeam.Role.RoleName)</div>
                        }
                    }
                </td> *@
                <td>
                    <a asp-action="Edit" asp-route-id="@team.TeamId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@team.TeamId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

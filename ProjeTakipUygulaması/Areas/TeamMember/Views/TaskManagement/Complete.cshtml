@model ProjeTakip.Models.ViewModels.TaskVM

<h2>Complete Task - @Model.TaskName</h2>

<form asp-action="Complete" method="post">
    <input type="hidden" asp-for="TaskId" />

    <div class="form-group">
        <label asp-for="TaskName"></label>
        <input asp-for="TaskName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="TaskDescription"></label>
        <textarea asp-for="TaskDescription" class="form-control" readonly></textarea>
    </div>

    <div class="form-group">
        <label asp-for="GitHubPush"></label>
        <input asp-for="GitHubPush" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Complete Task</button>
</form>
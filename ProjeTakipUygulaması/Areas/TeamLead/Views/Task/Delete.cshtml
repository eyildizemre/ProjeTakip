@model ProjeTakip.Models.ViewModels.TaskVM

@{
    ViewData["Title"] = "Görev Sil";
}

<h2>@ViewData["Title"]</h2>

<h3>Bu görevi silmek istediğinizden emin misiniz?</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TaskId" />

    <div class="form-group">
        <label asp-for="TaskName" class="control-label"></label>
        <input asp-for="TaskName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="TaskDescription" class="control-label"></label>
        <textarea asp-for="TaskDescription" class="form-control" disabled></textarea>
    </div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">Atanan Kullanıcı</label>
        <input asp-for="AssignedUserName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="ProjectId" class="control-label">Proje</label>
        <input asp-for="ProjectName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="TaskStatusId" class="control-label">Görev Durumu</label>
        <input asp-for="TaskStatusName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" disabled />
    </div>

    <div class="form-group">
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',  // Tüm textarea elementlerine TinyMCE uygular
            readonly: 1,
            plugins: 'lists link image preview',
            toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
            menubar: false,
            branding: false
        });
    </script>
}
